{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ipa",
    "version": "0.1.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "copyFile": true,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "scope": [
          "$APPDATA",
          "$APPDATA/**/*",
          "$APPDATA/**",
          "$APPDATA/*",
          "$HOME",
          "$HOME/**",
          "$HOME/*",
          "$HOME/**/*"
        ],
        "writeFile": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["$APPDATA/**/*"]
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": true,
        "open": false,
        "save": false
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.example.test",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "asset: "
    },
    "updater": {
      "active": true,
      "endpoints": ["https://ipa.leoking.xyz/{{target}}/{{arch}}/{{current_version}}.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMyNUZDODdCQjUyRkIzNzQKUldSMHN5KzFlOGhmd3ZDd0c2alROdzB0ejlmVUU3Mm9WUXRHUnNMSjVhY0Q3c3RkajJBZW5pY0YK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "theme": "Light",
        "maxHeight": 600,
        "maxWidth": 800,
        "fullscreen": false,
        "resizable": false,
        "title": "ipa",
        "decorations": false,
        "visible": true,
        "center": true
      },
      {
        "maxHeight": 600,
        "maxWidth": 800,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "center": true,
        "visible":false
      }
    ]
  }
}
